<% layout('layouts/boilerplate')%>
<div id="cluster-map"></div>
<div class="container">
    <h1>All Places</h1>
        <div>
            <a href="/places/new">Add a place</a>
        </div>
        <ul>
            <% for (let place of places) {%>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <%if(place.images.length) {%>
                        <img crossorigin="anonymous" class="img-fluid" alt="" src="<%=place.images[0].url%>">
                        <% }else {%>
                            <img crossorigin="anonymous" class="img-fluid" alt=""
                            src="https://res.cloudinary.com/dbagy7fhd/image/upload/v1683392728/BeenThere/txystfax043pxhbdbn0s.jpg">
                        <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= place.title %> </h5>
                            <p class="card-text"><%= place.description %></p>
                            <p class="card-text">
                                <small class="text-muted"><%= place.location%></small>
                            </p>
                            <a class="btn btn-primary" href="/places/<%=place._id%>">View <%=place.title%></a>
                        </div>
                    </div>
                </div>
            </div>
    <% }%>
</ul>

</div>


<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const places = {features: <%- JSON.stringify(places) %>}
</script>
<script src="/javascripts/clusterMap.js"></script>