<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">New Place</h1>
    <div class="col-6 offset-3">
        <form action="/places" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="place[title]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="place[location]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="">Upload Images</label>
                <div class="form-file custom-file">
                    <input type="file" class="form-file-input" id="image" name="image" multiple>
                    <label class="form-file-label" for="image">
                        <span class="form-file-text custom-file-label">Choose image(s)...</span>
                        <span class="form-file-button">Browse</span>
                    </label>
                </div>
            </div>
            <!-- <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="place[image]" required>
            </div> -->
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="place[description]" required></textarea>
            </div>
            
            <!-- <input type="file" name ="image" multiple> -->
            <div class="mb-3">
                <button class="btn btn-success">Add a place</button>
            </div>

        </form>
        <a href="/places">All places</a>
    </div>
</div>